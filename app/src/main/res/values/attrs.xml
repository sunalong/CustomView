<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 注意strokeWidth应该设置精确一些，最好保留小数点两位，不然会有上下stroke的宽度显示不一致-->
    <!-- 可比较设置为1dp和1.33dp的效果-->
    <declare-styleable name="MyTextView">
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="rectColor" format="color" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="textPaddingTop" format="dimension" />
        <attr name="imageIcon" format="reference" />
        <attr name="imageIconScaleType">
            <enum name="fillXY" value="0" />
            <enum name="center" value="1" />
        </attr>
    </declare-styleable>

    <attr name="circleWidth" format="dimension" />
    <attr name="spaceAngle" format="integer"/>
    <!-- 可变色的progressBar-->
    <declare-styleable name="ColorfulProgressBar">
        <attr name="firstColor" format="color" />
        <attr name="secondColor" format="color" />
        <attr name="speed" format="integer" />
        <attr name="circleWidth"/>
    </declare-styleable>

    <!-- 微信声音控件-->
    <declare-styleable name="WechatView">
        <attr name="beforeColor" format="color"/>
        <attr name="afterColor" format="color"/>
        <attr name="circleWidth"/>
        <attr name="dotCount" format="integer"/>
        <attr name="splitSize" format="integer"/>
        <attr name="bgIcon" format="reference"/>
        <attr name="spaceAngle"/>
    </declare-styleable>
</resources>