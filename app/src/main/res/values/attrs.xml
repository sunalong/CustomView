<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 注意strokeWidth应该设置精确一些，最好保留小数点两位，不然会有上下stroke的宽度显示不一致-->
    <!-- 可比较设置为1dp和1.33dp的效果-->
    <attr name="text" format="string"/>
    <attr name="textSize" format="dimension"/>
    <attr name="textColor" format="color"/>
    <declare-styleable name="ItemView">
        <attr name="text"/>
        <attr name="textSize"/>
        <attr name="textColor"/>
        <attr name="rectColor" format="color"/>
        <attr name="strokeColor" format="color"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="textPaddingTop" format="dimension"/>
        <attr name="imageIcon" format="reference"/>
        <attr name="imageIconScaleType">
            <enum name="fillXY" value="0"/>
            <enum name="center" value="1"/>
        </attr>
    </declare-styleable>

    <attr name="circleWidth" format="dimension"/>
    <attr name="spaceAngle" format="integer"/>
    <!-- 可变色的progressBar-->
    <declare-styleable name="ColorfulProgressBar">
        <attr name="firstColor" format="color"/>
        <attr name="secondColor" format="color"/>
        <attr name="speed" format="integer"/>
        <attr name="circleWidth"/>
    </declare-styleable>

    <!-- 微信声音控件-->
    <declare-styleable name="WechatView">
        <attr name="beforeColor" format="color"/>
        <attr name="afterColor" format="color"/>
        <attr name="circleWidth"/>
        <attr name="dotCount" format="integer"/>
        <attr name="splitSize" format="integer"/>
        <attr name="bgIcon" format="reference"/>
        <attr name="spaceAngle"/>
    </declare-styleable>

    <declare-styleable name="SingleTouchView">
        <attr name="text"/>
        <attr name="textSize"/>
        <attr name="textColor"/>
        <attr name="src" format="reference"/>            <!-- 用于缩放旋转的图标 -->
        <attr name="editable" format="boolean"/>          <!-- 是否处于可编辑状态 -->
        <attr name="frameColor" format="color"/>         <!-- 边框颜色 -->
        <attr name="frameWidth" format="dimension"/>     <!-- 边框线宽度 -->
        <attr name="framePadding" format="dimension"/>   <!-- 边框与图片的间距 -->
        <attr name="degree" format="float"/>             <!-- 旋转角度 -->
        <attr name="scale" format="float"/>              <!-- 缩放比例 -->
        <attr name="controlDrawable" format="reference"/> <!-- 控制图标 -->
        <attr name="controlLocation">                     <!-- 控制图标的位置 -->
            <enum name="left_top" value="0"/>
            <enum name="right_top" value="1"/>
            <enum name="right_bottom" value="2"/>
            <enum name="left_bottom" value="3"/>
        </attr>
    </declare-styleable>

    <attr name="textwidth" format="integer"/>
    <attr name="typeface">
        <enum name="normal" value="0"/>
        <enum name="sans" value="1"/>
        <enum name="serif" value="2"/>
        <enum name="monospace" value="3"/>
    </attr>

    <declare-styleable name="CYTextView">
        <attr name="textwidth" />
        <attr name="textSize"/>
        <attr name="textColor"/>
        <attr name="lineSpacingExtra" format="dimension"/>
        <attr name="typeface" />
    </declare-styleable>
</resources>