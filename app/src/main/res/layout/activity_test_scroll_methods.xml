<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btViewMoveLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View向左移动10dp" />

    <Button
        android:id="@+id/btViewMoveRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View向右移动10dp" />

    <Button
        android:id="@+id/btContentMoveLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容向左移动10dp" />

    <Button
        android:id="@+id/btContentMoveRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容向右移动10dp" />
    <Button
        android:id="@+id/btByMoveRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScrollBy内容向右移动10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#000088"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvTestedView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="#00FF00"
            android:gravity="center"
            android:text="textView中的内容"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>